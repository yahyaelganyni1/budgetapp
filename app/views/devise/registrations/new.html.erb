<div class="flex-col">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="header flex-row align-center mt-10">
      <%= render "devise/shared/back_button" %>
      <h2 class="mr-auto ml-auto">REGISTER</h2>
      <div class="actions">
        <%= f.submit "Next" %>
      </div>
    </div>
    <div class="field">
      <%= f.text_field :name, autocomplete: "name", placeholder: "Full name", class: "w-full" %>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email", class: "w-full" %>
    </div>
    <div class="field">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" , placeholder: "password", class: "w-full" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "password confirmation", class: "w-full" %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
