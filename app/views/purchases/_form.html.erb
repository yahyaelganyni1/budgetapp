<%= form_with(model: purchase) do |form| %>
  <div class="header flex-row align-center mt-10">
    <%= render "shared/back_button" %>
    <h2 class="mr-auto ml-auto">ADD NEW PURCHASE</h2>
    <div class="actions">
      <%= form.submit "Save"%>
    </div>
  </div>
  <div class="field">
    <%= form.text_field :name, autofocus: true, placeholder: "Name", required: true, class: "w-full" %>
  </div>
  <div class="field">
    <%= form.number_field :amount, placeholder: "Amount", required: true, class: "w-full" %>
  </div>
  <div class="field">
    <%= form.collection_select :category_ids, current_user.categories.order(:name), :id, :name, {}, { multiple: true, class: "w-full"} %>
  </div>
<% end %>
